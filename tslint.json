{
    "extends": "tslint:recommended",
    "rulesDirectory": [
        "src"
    ],
    "rules": {
        "max-line-length": [
            true,
            160
        ],
        "new-parens": false,
        "no-arg": true,
        "no-bitwise": false,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": false,
        "no-console": false,
        "quotemark": [
            true,
            "single"
        ],
        "no-var-requires": false,
        "trailing-comma": [
            true,
            {
                "multiline": "never",
                "singleline": "never"
            }
        ],
        "whitespace": false,
        "object-literal-sort-keys": false,
        "forin": false,
        "no-shadowed-variable": false,
        "variable-name": [
            "ban-keywords",
            "check-format",
            "allow-leading-underscore",
            "allow-pascal-case"
        ],
        "indent": [
            true,
            "spaces",
            4
        ],
        "interface-name": false,
        //    "max-classes-per-file": [false],
        "no-trailing-whitespace": false,
        "only-arrow-functions": [
            false
        ],
        "no-unused-expression": [
            false
        ],
        "one-variable-per-declaration": false,
        "ordered-imports": false,
        "no-namespace": false,
        "member-ordering": [
            false
        ],
        "arrow-parens": [false]
    },
    "jsRules": {
        "max-line-length": [
            true,
            120
        ]
    }
}